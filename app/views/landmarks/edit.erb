<h2>Edit Historical Landmark</h2>

<!-- add content here -->
<form action="/landmarks/<%= @landmark.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="PATCH" />

  Current Name:
  <input
    type="text"
    name="landmark[name]"
    value="<%= @landmark.name %>"
    id="name"
  />
  Current Year Completed:
  <input
    type="text"
    name="landmark[year_completed]"
    value="<%= @landmark.year_completed %>"
    id="year_completed"
  />

  <input type="submit" value="Edit Landmark" />
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
